<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.ssafy.ssafit.model.dao.ReplyDao">
	<resultMap type="reply" id="replyMap">
		<id column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="post_id" property="postId" />
		<result column="comment_id" property="commentId" />
		<result column="content" property="content" />
		<result column="created_at" property="createdAt" />
	</resultMap>

	<insert id="insertReply" parameterType="reply">
		INSERT INTO reply
		VALUES
		(0, #{userId}, #{postId}, #{commentId}, #{content}, now())
	</insert>
	
	<update id="updateReply" parameterType="reply">
		UPDATE reply
		SET
		content = #{content}
		WHERE id = #{id}
	</update>
	
	<delete id="deleteReply" parameterType="int">
		DELETE FROM reply
		WHERE id = #{id}
	</delete>
	
	<delete id="deleteReplyByPostId" parameterType="int">
		DELETE FROM
		reply WHERE post_id = #{postId}
	</delete>

	<select id="selectOne" resultMap="replyMap"
		parameterType="int">
		SELECT id, user_id, post_id, comment_id, content,
		date_format(created_at, '%Y년%m월%d일 %H시%i분%s초') as created_at
		FROM
		reply
		WHERE id = #{id}
	</select>

	<select id="selectListByCommentId" resultMap="replyMap"
		parameterType="int">
		SELECT id, user_id, post_id, comment_id, content,
		date_format(created_at, '%Y년%m월%d일 %H시%i분%s초') as created_at
		FROM
		reply
		WHERE comment_id = #{commentId}
	</select>
 </mapper>